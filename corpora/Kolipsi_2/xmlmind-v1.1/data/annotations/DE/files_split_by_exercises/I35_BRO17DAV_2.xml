          <originalForm>CARENZE</originalForm>

          <targetForm>carenze</targetForm>
        </over_capitalisation></foreign_word> (<correction>
        <deletion><unreadable/></deletion>
      </correction> <foreign_word foreign_language="Italiano"><over_capitalisation>
